@model IEnumerable<EventPlannerPro.Models.Category>
@{
    ViewData["Title"] = "Категории";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container-fixed">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn-custom">Създаване на нова категория</a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-muted">Няма намерени категории.</p>
    }
    else
    {
        <!-- Force exactly 3 columns -->
        <div class="row row-cols-3 g-4">
            @foreach (var cat in Model)
            {
                <div class="col">
                    <div class="activity-card text-center">
                        @if (!string.IsNullOrEmpty(cat.PhotoUrl))
                        {
                            <img src="@cat.PhotoUrl" alt="@cat.Name" class="card-img-top" />
                        }
                        <div class="activity-card-body">
                            <h5>@cat.Name</h5>
                        </div>
                        <div class="activity-card-footer">
                            <a asp-controller="Activities"
                               asp-action="Index"
                               asp-route-categoryId="@cat.Id"
                               class="btn-custom btn-sm">
                                Виж събития
                            </a>
                            @if (isAdmin)
                            {
                                <a asp-action="Edit" asp-route-id="@cat.Id" class="btn-custom btn-sm">Редактирай</a>
                                <form asp-action="Delete"
                                      asp-route-id="@cat.Id"
                                      method="post"
                                      class="d-inline">
                                    <button type="submit"
                                            class="btn-custom btn-sm"
                                            onclick="return confirm('Наистина ли желаете да изтриете тази категория?');">
                                        Изтрий
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
