@model IEnumerable<EventPlannerPro.Models.Activity>
@using EventPlannerPro.Models
@{
    ViewData["Title"] = "Събития в тази категория";
    bool isAdmin = User.IsInRole("Admin");
}

<h2 class="mb-4">Събития в @ViewBag.Category.Name</h2>

@if (!Model.Any())
{
    <p class="text-muted mb-3">Все още няма създадени събития за тази категория.</p>
    @if (isAdmin)
    {
        <a asp-controller="Activities" asp-action="Create" class="btn btn-success">Създай събитие</a>
    }
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var activity in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(activity.PhotoUrl))
                    {
                        <img src="@activity.PhotoUrl" alt="@activity.Title" class="card-img-top" style="height:240px;object-fit:cover;" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@activity.Title</h5>
                        <p class="card-text">@activity.Description</p>
                        <p class="card-text">
                            <strong>Град:</strong> @activity.City?.Name<br />
                            <strong>Дата:</strong> @activity.StartTime.ToString("dd MMM yyyy HH:mm")
                        </p>
                        <div class="d-flex justify-content-center gap-2 mt-auto">
                            <a asp-controller="Activities" asp-action="Details" asp-route-id="@activity.Id" class="btn btn-outline-primary btn-sm">Виж подробности</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
