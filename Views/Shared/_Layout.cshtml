<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Event Planner Pro</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar-custom">
        <div class="navbar-left">
            <ul class="navbar-menu">
                <li><a asp-controller="Home" asp-action="Index">Начало</a></li>
                <li><a asp-controller="Activities" asp-action="Index">Дейности</a></li>
                <li><a asp-controller="Activities" asp-action="Joined">Записани</a></li>
                <li><a asp-controller="Categories" asp-action="Index">Категории</a></li>
                <li><a asp-controller="Cities" asp-action="Index">Градове</a></li>
                <li><a asp-controller="Organizer" asp-action="Index">Организатори</a></li>
            </ul>
        </div>
        <div class="navbar-center">
            <a href="~/"><img src="~/images/logo.png" alt="Лого" /></a>
        </div>
        <div class="navbar-right">
            <div class="navbar-user">
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="username">Здравей, @User.Identity.Name</span>
                    <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                        <button type="submit" class="btn-custom">Изход</button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn-custom">Вход</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn-custom ms-2">Регистрация</a>
                }
            </div>
        </div>
    </nav>
    <main>
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
