@model Microsoft.AspNetCore.Identity.IdentityUser
@using EventPlannerPro.Models
@{
    ViewData["Title"] = "Organizer Profile";
    var acts = ViewBag.Activities as IEnumerable<Activity>;
    var revs = ViewBag.Reviews as IEnumerable<OrganizerReview>;
    double avg = (double)ViewBag.Avg;
}

<h2 class="mb-3">@Model.UserName</h2>
<p class="text-muted">@Model.Email</p>
@if (avg > 0)
{
    <p>Average Rating: @avg.ToString("0.0") ★</p>
}

<h4 class="mt-4">Activities</h4>
@if (!acts.Any())
{
    <p>No activities.</p>
}
else
{
    <ul class="list-group mb-4">
        @foreach (var a in acts)
        {
            <li class="list-group-item">
                @a.Title
            </li>
        }
    </ul>
}

<h4>Reviews</h4>
@if (!revs.Any())
{
    <p>No reviews yet.</p>
}
else
{
    <ul class="list-group mb-3">
        @foreach (var r in revs)
        {
            <li class="list-group-item">
                <strong>@r.Rating ★</strong> – @r.Comment
                <br /><small class="text-muted">by @r.Reviewer.UserName (@r.CreatedOn.ToString("dd MMM yyyy"))</small>
            </li>
        }
    </ul>
}

<h5 class="mt-4">Leave a Review</h5>
<form asp-action="Review" method="post" class="row g-2">
    <input type="hidden" name="organizerId" value="@Model.Id" />
    <div class="col-12 col-md-2">
        <select name="rating" class="form-select">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option selected>5</option>
        </select>
    </div>
    <div class="col-12 col-md-8">
        <input type="text" name="comment" placeholder="Comment" class="form-control" />
    </div>
    <div class="col-12 col-md-2 d-grid">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
