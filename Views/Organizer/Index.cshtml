@model EventPlannerPro.ViewModels.OrganizerIndexViewModel
@{
    ViewData["Title"] = "Organizers";
    var ratings = ViewBag.Ratings as IDictionary<string, double>;
}

<h2 class="mb-4">My Profile</h2>

@if (!Model.MyActivities.Any())
{
    <p>You haven’t created any activities yet.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        @foreach (var a in Model.MyActivities)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(a.PhotoUrl))
                    {
                        <img src="@a.PhotoUrl" class="card-img-top" style="object-fit:cover;height:220px" />
                    }
                    <div class="card-body">
                        <h5 class="fw-bold">@a.Title</h5>
                        <p>@a.Description</p>
                        <p><strong>City:</strong> @a.City?.Name</p>
                        <p><strong>Date:</strong> @a.StartTime:dd MMM yyyy HH:mm</p>
                        <p><strong>Capacity:</strong> @a.Participants.Count / @a.Capacity</p>
                    </div>
                </div>
            </div>
        }
    </div>
}

<hr class="my-4" />

<h2 class="mb-3">Organizers</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var u in Model.Organizers)
    {
        double avg = (ratings != null && ratings.TryGetValue(u.Id, out var s)) ? s : 0.0;
        string stars = new string('★', (int)Math.Round(avg)).PadRight(5, '☆');

        <div class="col">
            <div class="card h-100 text-center p-4 shadow-sm">
                <h4>@u.UserName</h4>
                <small class="text-muted">@u.Email</small>

                <p class="mt-3 mb-0">
                    <strong>Rating:</strong> @avg.ToString("0.0") &nbsp;<span style="color:#ffc107">@stars</span>
                </p>

                <a asp-action="Profile" asp-route-id="@u.Id"
                   class="btn btn-primary w-100 mt-3">Profile</a>
            </div>
        </div>
    }
</div>
