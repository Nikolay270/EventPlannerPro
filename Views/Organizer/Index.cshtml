@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Organizers";
}

<h2 class="mb-4">Organizers</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var o in Model)
    {
        <div class="col">
            <div class="card h-100 text-center shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@o.UserName</h5>
                    <p class="card-text mb-2">@o.Email</p>
                    <p class="card-text mb-2">Activities: @o.ActivityCount</p>
                    <p class="card-text mb-3">Rating: @o.AvgRating.ToString("0.0") ★</p>
                    <a asp-action="Details" asp-route-id="@o.OrganizerId" class="btn btn-outline-primary mt-auto">Profile</a>
                </div>
            </div>
        </div>
    }
</div>
