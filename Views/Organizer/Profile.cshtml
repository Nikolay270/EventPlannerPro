@model Microsoft.AspNetCore.Identity.IdentityUser
@using EventPlannerPro.Models
@using System.Security.Claims
@{
    ViewData["Title"] = $"Профил на {Model.UserName}";

    // Pull data out of ViewBag
    var activities = ViewBag.Activities as IEnumerable<Activity> ?? Enumerable.Empty<Activity>();
    var reviews = ViewBag.Reviews as IEnumerable<OrganizerReview> ?? Enumerable.Empty<OrganizerReview>();
    var average = ViewBag.Average as double? ?? 0.0;
    var myReview = ViewBag.MyReview as OrganizerReview;

    // Current user id
    var me = User.FindFirstValue(ClaimTypes.NameIdentifier);
    bool canReview = User.Identity.IsAuthenticated && me != Model.Id && myReview == null;
}

<main class="container-fixed">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <section class="mb-5">
        <h3>Събития от @Model.UserName</h3>
        @if (!activities.Any())
        {
            <p class="text-muted">Все още няма създадени събития.</p>
        }
        else
        {
            <div class="row row-cols-3 g-4">
                @foreach (var a in activities)
                {
                    <div class="col">
                        <div class="activity-card">
                            @if (!string.IsNullOrEmpty(a.PhotoUrl))
                            {
                                <img src="@a.PhotoUrl" alt="@a.Title" class="card-img-top" />
                            }
                            <div class="activity-card-body">
                                <h5>@a.Title</h5>
                                <small>
                                    <strong>Град:</strong> @a.City?.Name<br />
                                    <strong>Дата:</strong> @a.StartTime.ToString("dd MMM yyyy HH:mm")
                                </small>
                            </div>
                            <div class="activity-card-footer text-center">
                                <a asp-controller="Activities"
                                   asp-action="Details"
                                   asp-route-id="@a.Id"
                                   class="btn-custom btn-sm">
                                    Подробности
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>

    <section class="mb-5">
        <h3>Отзиви (средно: @average.ToString("0.0"))</h3>
        @if (!reviews.Any())
        {
            <p class="text-muted">Все още няма отзиви.</p>
        }
        else
        {
            <ul class="list-unstyled">
                @foreach (var r in reviews)
                {
                    <li class="mb-3">
                        <strong>@r.Reviewer.UserName:</strong>
                        <span style="color:#ffc107">
                            @(new string('★', (int)r.Rating).PadRight(5, '☆'))
                        </span>

                        <br />
                        <small class="text-muted">@r.CreatedOn.ToString("dd MMM yyyy")</small>
                        <p>@r.Comment</p>
                    </li>
                }
            </ul>
        }
    </section>

    @if (canReview)
    {
        <section class="mb-5">
            <h3>Остави отзив</h3>
            <form asp-action="Review" method="post">
                <input type="hidden" name="organizerId" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label">Оценка (1–5)</label>
                    <input name="rating" type="number" min="1" max="5" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Коментар</label>
                    <textarea name="comment" class="form-control"></textarea>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn-custom">Изпрати отзив</button>
                </div>
            </form>
        </section>
    }
</main>
