@model EventPlannerPro.Models.City
@{
    ViewData["Title"] = "Редактиране на град";
    Layout = "_Layout";
}

<main class="container-fixed">
    <div class="form-container mx-auto">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Име</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhotoUrl" class="form-label">URL на снимка</label>
                <input asp-for="PhotoUrl" class="form-control" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn-custom">Запази промените</button>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
