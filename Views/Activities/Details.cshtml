@model EventPlannerPro.Models.Activity
@{
    ViewData["Title"] = "Activity Details";
}

<div class="card shadow border-0 mt-4">
    <div class="card-body">
        <h3>@Model.Title</h3>
        <p><strong>Place:</strong> @Model.Place</p>
        <p><strong>City:</strong> @Model.City?.Name</p>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Start:</strong> @Model.StartTime.ToString("f")</p>
        <p><strong>End:</strong> @Model.EndTime.ToString("f")</p>
        <p><strong>Description:</strong> @Model.Description</p>
    </div>
    <div class="card-footer text-end">
        <a class="btn btn-primary" href="#">Join Activity</a> <!-- future functionality -->
        <a class="btn btn-secondary" href="/Activities">Back</a>
    </div>
</div>
