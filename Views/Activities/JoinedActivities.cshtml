@model IEnumerable<EventPlannerPro.Models.Activity>

@{
    ViewData["Title"] = "Присъединени събития";
}

<div class="container my-5">
    <div class="p-4 bg-light rounded shadow">
        <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

        @if (!Model.Any())
        {
            <p class="text-muted text-center mb-0">
                Все още не сте се присъединили към нито едно събитие.
            </p>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var activity in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(activity.PhotoUrl))
                            {
                                <img src="@activity.PhotoUrl" alt="@activity.Title"
                                     class="card-img-top"
                                     style="height:240px;object-fit:cover;" />
                            }
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@activity.Title</h5>
                                <p class="card-text">@activity.Description</p>
                                <p class="card-text mb-4">
                                    <strong>Град:</strong> @activity.City?.Name<br />
                                    <strong>Категория:</strong> @activity.Category?.Name<br />
                                    <strong>Капацитет:</strong> @activity.Participants.Count / @activity.Capacity<br />
                                    <strong>Дата:</strong> @activity.StartTime.ToString("dd MMM yyyy HH:mm")
                                </p>
                                <div class="d-flex justify-content-center gap-2 mt-auto">
                                    <a asp-action="Details" asp-route-id="@activity.Id" class="btn btn-outline-primary btn-sm">
                                        Виж подробности
                                    </a>
                                    <form asp-action="Leave" asp-route-id="@activity.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">Напусни</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
