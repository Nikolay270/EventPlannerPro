@model IEnumerable<EventPlannerPro.Models.Activity>

@{
    ViewData["Title"] = "Activities for Category";
}

<h2 class="mb-4">Activities in @ViewBag.CategoryName</h2>

@if (!Model.Any())
{
    <p>No activities found for this category.</p>
}
else
{
    <div class="row">
        @foreach (var activity in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <img src="@activity.PhotoUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Activity Image" />
                    <div class="card-body">
                        <h5 class="card-title">@activity.Title</h5>
                        <p class="card-text">
                            <strong>Place:</strong> @activity.Place<br />
                            <strong>City:</strong> @activity.City?.Name<br />
                            <strong>Start:</strong> @activity.StartTime.ToString("g")<br />
                            <strong>End:</strong> @activity.EndTime.ToString("g")<br />
                            <a asp-action="Details" asp-route-id="@activity.Id" class="btn btn-primary btn-sm mt-2">View Details</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}
