@{
    ViewData["Title"] = "Create New Activity";
    Layout = "_Layout";
}

<main class="container-fixed">
    <div class="form-container mx-auto" style="max-width:600px;">
        <h2 class="text-center mb-4">Create New Activity</h2>

        <form asp-action="CreateSimple" method="post">
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input name="title" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Photo URL</label>
                <input name="photoUrl" class="form-control" />
            </div>

            <div class="row gx-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">City</label>
                    <select name="cityId" class="form-select">
                        <option value="">– none –</option>
                        @foreach (var city in (IEnumerable<EventPlannerPro.Models.City>)ViewBag.Cities)
                        {
                            <option value="@city.Id">@city.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Category</label>
                    <select name="categoryId" class="form-select">
                        <option value="">– none –</option>
                        @foreach (var cat in (IEnumerable<EventPlannerPro.Models.Category>)ViewBag.Categories)
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row gx-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">Date & Time</label>
                    <input name="startTime" type="datetime-local" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Capacity</label>
                    <input name="capacity" type="number" class="form-control" />
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn-custom">Create Activity</button>
            </div>
        </form>
    </div>
</main>
