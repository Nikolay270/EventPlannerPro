@model IEnumerable<EventPlannerPro.Models.Activity>
@using EventPlannerPro.Models

@{
    ViewData["Title"] = "All Activities";
    var cities = ViewBag.Cities as IEnumerable<City>;
    var categories = ViewBag.Categories as IEnumerable<Category>;
    var qTitle = Context.Request.Query["searchTitle"];
    var qCity = Context.Request.Query["cityId"];
    var qCategory = Context.Request.Query["categoryId"];
    var qDate = Context.Request.Query["date"];
}

<h2 class="mb-4">All Activities</h2>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-success">Create New Activity</a>
</div>

<form asp-action="Index" method="get" class="row gy-2 gx-2 mb-4">
    <div class="col-12 col-md-3">
        <input type="text" name="searchTitle" value="@qTitle" placeholder="Search by title" class="form-control" />
    </div>
    <div class="col-6 col-md-2">
        <select name="cityId" class="form-select">
            <option value="">All Cities</option>
            @foreach (var c in cities ?? Enumerable.Empty<City>())
            {
                <option value="@c.Id" selected="@(qCity == c.Id.ToString())">@c.Name</option>
            }
        </select>
    </div>
    <div class="col-6 col-md-2">
        <select name="categoryId" class="form-select">
            <option value="">All Categories</option>
            @foreach (var cat in categories ?? Enumerable.Empty<Category>())
            {
                <option value="@cat.Id" selected="@(qCategory == cat.Id.ToString())">@cat.Name</option>
            }
        </select>
    </div>
    <div class="col-6 col-md-2">
        <input type="date" name="date" value="@qDate" class="form-control" />
    </div>
    <div class="col-6 col-md-1 d-grid">
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>

@if (!Model.Any())
{
    <p class="text-muted">No activities found.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var activity in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(activity.PhotoUrl))
                    {
                        <img src="@activity.PhotoUrl" alt="@activity.Title" class="card-img-top" style="height:240px;object-fit:cover;" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@activity.Title</h5>
                        <p class="card-text">@activity.Description</p>
                        <p class="card-text">
                            <strong>City:</strong> @activity.City?.Name<br />
                            <strong>Category:</strong> @activity.Category?.Name<br />
                            <strong>Capacity:</strong> @activity.Participants.Count / @activity.Capacity<br />
                            <strong>Date:</strong> @activity.StartTime.ToString("dd MMM yyyy HH:mm")
                        </p>
                        <div class="d-flex justify-content-center gap-2 mt-auto">
                            <a asp-action="Details" asp-route-id="@activity.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                            <form asp-action="Join" asp-route-id="@activity.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-success btn-sm">Join</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
