@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

@section Head {
    <style>
        .register-bg {
            background: linear-gradient(135deg, #f0f7ff, #e8f0ff);
        }

        .register-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
            padding: 2rem;
        }

        .register-title {
            font-weight: 600;
            color: #0d6efd;
        }
    </style>
}

<div class="container-fluid register-bg d-flex flex-column justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="register-card w-100" style="max-width: 520px;">
        <h2 class="text-center mb-4 register-title">@ViewData["Title"]</h2>

        <form method="post" class="row g-3">
            <div asp-validation-summary="All" class="text-danger col-12"></div>

            <div class="col-md-6">
                <label asp-for="Input.UserName" class="form-label">Потребителско име</label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Input.Email" class="form-label">Имейл</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Input.Password" class="form-label">Парола</label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Input.ConfirmPassword" class="form-label">Потвърди парола</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="col-12 d-grid">
                <button type="submit" class="btn btn-primary py-2">Регистрация</button>
            </div>

            <div class="col-12 text-center">
                <small class="text-muted">
                    Вече имате акаунт?
                    <a asp-page="./Login">Вход</a>
                </small>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
