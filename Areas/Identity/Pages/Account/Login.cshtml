@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
}

@section Head {
    <style>
        .login-bg {
            background: linear-gradient(135deg, #f0f7ff, #e8f0ff);
        }

        .login-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
            padding: 2rem;
        }

        .login-title {
            font-weight: 600;
            color: #0d6efd;
        }
    </style>
}

<div class="container-fluid login-bg d-flex align-items-center justify-content-center" style="min-height: 85vh;">
    <div class="login-card w-100" style="max-width: 420px;">
        <h1 class="text-center mb-4 login-title">@ViewData["Title"]</h1>

        <form id="account" method="post" asp-route-returnUrl="/">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fs-5">Вход</button>

            <div class="text-center mt-3">
                <a asp-page="./Register" class="text-decoration-none">Нямате акаунт? Регистрация</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
